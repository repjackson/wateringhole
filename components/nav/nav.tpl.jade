.ui.inverted.menu
    if $.Session.get 'herd'
        a.header.item(href="/" class="{{isActivePath '/'}}")
            h3 {{$.Session.get 'herd'}}
        a.item(href='/docs' class="{{isActivePath '/docs'}}") 
            i.pin.icon
            |Bulletin Board
        a.item(href='/events' class="{{isActivePath '/events'}}")
            i.calendar.icon
            strong Events
        a.item(href='/posts' class="{{isActivePath '/posts'}}")
            i.newspaper.icon
            strong Blog
    else
        a.header.item(href='/' class="{{isActivePath '/'}}")
            h3 Watering Hole
        a.item(href='/features' class="{{isActivePath '/features'}}") Features
        a.item(href='/#plans' class="{{isActivePath '/#plans'}}") Pricing
        a.item(href='/herds' class="{{isActivePath '/herds'}}") Herds
        // a.item(href='/about' class="{{isActivePath '/about'}}") About
    .right.menu
        if currentUser
            // if isInRole 'admin'
            //     a.item(href='/admin/' class="{{isActivePath '/admin/'}}")
            //         i.configure.icon
            //         | Admin
            .item Current Herd: #{currentUser.profile.current_herd}
            a.item(href="/account/profile/edit/#{currentUser._id}" class="{{isActivePath '/account/profile/edit/#{currentUser._id}'}}")
                if currentUser.profile.image_id
                    img.ui.avatar.image(src="{{c.url currentUser.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                else
                    i.user.icon
                if currentUser.profile.name
                    | #{currentUser.profile.name}
                else
                    | Profile
            a#logout.ui.item(href='#') 
                i.sign.out.icon
                |Sign Out
        else
            a.ui.item(href='/sign-in') 
                i.sign.in.icon
                |Sign In
