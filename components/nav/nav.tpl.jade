.ui.inverted.green.fixed.menu
    if currentUser.profile.current_herd_id
        .active.item
            .wild_header #{currentUser.profile.current_herd_name} Herd
        a.item(href='/members' class="{{isActivePath '/members'}}") 
            .wild_header People
        a.item(href='/docs' class="{{isActivePath '/docs'}}") 
            .wild_header Bulletin Board
        a.item(href='/events' class="{{isActivePath '/events'}}")
            .wild_header Events
        // a.item(href='/posts' class="{{isActivePath '/posts'}}")
        //     i.newspaper.icon
        //     strong Blog
    else
        a.item(href='/' class="{{isActivePath '/'}}")
            .wild_header Watering Hole
        a.item(href='/features' class="{{isActivePath '/features'}}") 
            .wild_header Features
        a.item(href='/#plans' class="{{isActivePath '/#plans'}}") 
            .wild_header Pricing
        // a.item(href='/about' class="{{isActivePath '/about'}}") About
    .right.menu
        a.item(href='/herds' class="{{isActivePath '/herds'}}") 
            .wild_header Herds
        if currentUser
            // if isInRole 'admin'
            //     a.item(href='/admin/' class="{{isActivePath '/admin/'}}")
            //         i.configure.icon
            //         | Admin
            a.item(href="/account/profile/edit/#{currentUser._id}" class="{{isActivePath '/account/profile/edit/#{currentUser._id}'}}")
                if currentUser.profile.image_id
                    img.ui.avatar.image(src="{{c.url currentUser.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                else
                    i.user.icon
                if currentUser.profile.name
                    .wild_header #{currentUser.profile.name}
                else
                    .wild_header Profile
            a#logout.ui.item(href='#') 
                .wild_header Sign Out
        else
            a.ui.item(href='/sign-in') 
                .wild_header Sign In
