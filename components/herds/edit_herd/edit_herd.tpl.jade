with herd
    .ui.container.basic.segment
        .ui.center.aligned.header Edit #{name} Herd
        .ui.form
            +edit_herd_image
            .field
                label Name
                input#name(type='text' value=name)
            .field
                label Herd Tags
                input#herd_tag(type='text' value=herd_tag)
            .field
                label Description
                textarea#description(rows='5') #{description}
            .field
                label Tags
                each tags
                    .ui.basic.circular.button.doc_tag
                        i.minus.icon
                        |#{this}
                .ui.left.icon.four.wide.input
                    i.add.icon
                    input#add_tag(type='text' placeholder='Add Tag' maxlength='50')
            if tags
                .ui.center.aligned.basic.segment
                    #save.ui.big.green.button 
                        .shadows Save #{name} Herd
