template(name='view_profile')
    .ui.text.container.segment
        .ui.center.aligned.header View Profile
        with person
            img.ui.centered.big.image(src="{{c.url profile.image_id width=800 height=600 gravity='face' crop='fill'}}")
            h2.ui.header
                |#{profile.name}
            if linkedin
                a.ui.circular.large.blue.icon.button(href=linkedin target='_blank')
                    i.linkedin.icon
            if facebook
                a.ui.circular.large.blue.icon.button(href=facebook target='_blank')
                    i.facebook.icon
            if twitter
                a.ui.circular.large.blue.icon.button(href=twitter target='_blank')
                    i.twitter.icon
            .ui.hidden.divider
            if profile.tags
                i.large.tags.icon
                each profile.tags
                    .ui.basic.label #{this}