.ui.inverted.menu
    a.ui.header.inverted.item(href='/') 
        |Watering Hole
    .right.menu
        // a.item(href='/admin' class="{{isActivePath '/admin/'}}")
        //     i.configure.icon
        //     | Admin
        if currentUser
            a.item(href="/profile/edit/#{currentUser._id}" )
                if currentUser.profile.image_id
                    img.ui.avatar.image(src="{{c.url currentUser.profile.image_id width=30 height=30 gravity='face' crop='fill'}}")
                else
                    i.user.icon
                if currentUser.profile.name
                    | #{currentUser.name}
                else
                    | #{currentUser.username}
            a#logout.ui.item(href='#') 
                i.large.sign.out.icon
                |Log Out
        else
            a.ui.item(href='/sign-in') 
                i.large.sign.in.icon
                |Log In


