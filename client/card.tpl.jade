.ui.card
    .image
        a(href="/profile/view/#{_id}")
            img.ui.fluid.image(src="{{c.url profile.image_id height=400 width=800 background='white' crop='pad'}}")
    .content
        a(href="/profile/view/#{_id}")
            h2.ui.center.aligned.header #{profile.first_name} #{profile.last_name}
        each five_tags
            .ui.compact.tiny.button.person_tag(class=tag_class) #{this}
    .extra.content
        +check_in_button
        +edit_profile_button